{
    "compilerOptions": {
        "outDir": "./built",
        "allowJs": true,
        "jsx": "react-jsx",
        "jsxImportSource": "@emotion/react",
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "plugins": [
            {
              "name": "ts-graphql-plugin",
              "schema": "src/__generated__/gatsby-schema.graphql",
              "tag": "graphql"
            }
          ]
    },
    "include": ["./src/**/*", "./scripts/**/*", "./plugins/**/*"],
    "exclude": ["./node_modules/"]
}